@model List<Category>

@{
    int i = 1;
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Categroy List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-controller="Category" asp-action="Create" class="btn btn-primary" type="button" id="btnOpenModal">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped text-center">
        <thead>
            <tr>
                <th>SL No</th>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@i</td>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                </tr>
                i++;
            }
        </tbody>
    </table>

</div>


}
